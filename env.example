# ========================================
# CONFIGURAÇÃO DE AMBIENTE - EVENT FLOW API
# ========================================

# AMBIENTE
NODE_ENV=development
PORT=3000

# ========================================
# BANCO DE DADOS
# ========================================
# Para desenvolvimento local (SQLite)
DATABASE_URL=file:./dev.db

# Para produção (PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/eventflow

# ========================================
# AUTENTICAÇÃO E SEGURANÇA
# ========================================
SECRET_KEY=your-secret-key-here-change-in-production
CORE_CONNECTION_SECRET_KEY=your-core-connection-key-here

# ========================================
# PLATFORM CORE
# ========================================
PLATFORM_CORE_URL=http://localhost:7000

# ========================================
# MINIO (S3 COMPATIBLE)
# ========================================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=uploads

# ========================================
# CLOUDINARY
# ========================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ========================================
# WHATSAPP (EVOLUTION API)
# ========================================
EVOLUTION_URL=http://localhost:8080
EVOLUTION_INSTANCE=default
EVOLUTION_API_KEY=your-evolution-api-key

# ========================================
# EMAIL (SENDINBLUE/SMTP)
# ========================================
# SENDINBLUE_API_KEY=your-sendinblue-api-key
# SMTP_HOST=smtp-relay.sendinblue.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASS=your-smtp-password

# ========================================
# ARQUIVOS TEMPORÁRIOS
# ========================================
TMPDIR=./tmp 